<h1>Staff Handbook</h1>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th width="80%">Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @handbook_categories.each do |handbook_category| %>
      <tr>
        <td><%= link_to handbook_category.title, handbook_category %></td>
        <td><%= link_to 'Edit', edit_handbook_category_path(handbook_category) %></td>
        <td><%= link_to 'Delete', handbook_category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Handbook category', new_handbook_category_path, :class => 'btn btn-default' %>
