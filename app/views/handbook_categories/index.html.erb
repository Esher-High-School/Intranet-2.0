<p id="notice"><%= notice %></p>

<h1>Listing Handbook Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @handbook_categories.each do |handbook_category| %>
      <tr>
        <td><%= handbook_category.title %></td>
        <td><%= link_to 'Show', handbook_category %></td>
        <td><%= link_to 'Edit', edit_handbook_category_path(handbook_category) %></td>
        <td><%= link_to 'Destroy', handbook_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

