<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th width="80%">Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> New Post'), new_post_path, :class => 'btn btn-default' %>
