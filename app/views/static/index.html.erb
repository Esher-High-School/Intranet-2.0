<div class="page-header">
  <h1>News</h1>
</div>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6">
      <div class="post">
        <h3><%= link_to post.title, post %></h3>
        <p>
          <%= truncate(strip_tags(post.text), :length => 150, :separator => ' ') %>
        </p>
        <p>
          <%= link_to 'Read more...', post %>
        </p>
      </div>
    </div>
  <% end %>
</div>
