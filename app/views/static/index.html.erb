<div class="page-header">
  <h1>News</h1>
</div>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6">
      <div class="post">
        <h3><%= link_to post.title, post %></h3>
        <p>
          <%= truncate(raw(strip_tags(post.text).html_safe), :length => 150, :separator => ' ') %>
        </p>
        <div class="row">
          <div class="col-xs-6">
            <p>
              <%= link_to 'Read more...', post %>
            </p>
          </div>
          <div class="col-xs-6 right">
            <%= post.created_at.strftime("%d %B") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
