<%= render 'elements/notice.html.erb' %>

<h1><%= @page.title %></h1>

<%= raw(@page.text) %>

<h2>Attachments</h2>
<table class="table">
  <thead>
    <tr>
      <th width="80%">Name</th>
      <th colspan="2"><%= link_to 'New', new_page_page_attachment_path(@page) %></th>
    </tr>
  </thead>
  <tbody>
    <% @page.page_attachments.each do |attachment| %>
      <tr>
        <td>
          <%= link_to attachment.title, attachment.attachment.url %>
        </td>
        <td><%= link_to 'Edit', edit_page_page_attachment_path(@page, attachment) %></td>
        <td><%= link_to 'Delete', [@page, attachment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to 'Back', pages_path %>
